{
    "root": true,
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "plugins": [
      "react"
    ],
    "env": {
      "node": true,
      "es6": true,
      "mocha": true,
      "jest": true
    },
    "rules": {
      "max-len": [
        2,
        80,
        2
      ],
      "class-methods-use-this": 0,
      "one-var": 0,
      "one-var-declaration-per-line": 0,
      "new-cap": 0,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "comma-dangle": 0,
      "curly": [
        "error",
        "multi-line"
      ],
      "array-callback-return": 0,
      "import/no-unresolved": [
        2,
        {
          "commonjs": true
        }
      ],
      "no-shadow": [
        "error",
        {
          "allow": [
            "req",
            "res",
            "err"
          ]
        }
      ]
    },
    "globals": {
      "localStorage": true,
      "window": true,
      "document": true,
      "toastr": true
    }
  }
